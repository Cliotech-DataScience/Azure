{
	"name": "scmm_activities_blob",
	"properties": {
		"linkedServiceName": {
			"referenceName": "DataloadStore",
			"type": "LinkedServiceReference"
		},
		"folder": {
			"name": "DWH"
		},
		"type": "AzureBlob",
		"structure": [
			{
				"name": "Activity_Id",
				"type": "Int32"
			},
			{
				"name": "Activity_Date",
				"type": "DateTime"
			},
			{
				"name": "details",
				"type": "String"
			}
		],
		"typeProperties": {
			"format": {
				"type": "TextFormat",
				"columnDelimiter": "\t",
				"rowDelimiter": "",
				"quoteChar": "",
				"nullValue": "\\N",
				"encodingName": null,
				"treatEmptyAsNull": true,
				"skipLineCount": 0,
				"firstRowAsHeader": false
			},
			"compression": {
				"type": "BZip2"
			},
			"fileName": {
				"value": "@CONCAT('SCMM_Activities_', pipeline().TriggerTime, '.csv.bz2')",
				"type": "Expression"
			},
			"folderPath": {
				"value": "@concat('rawdata/SCMM_Activities/Received=',utcnow())",
				"type": "Expression"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}